{
    "name": "awcodes/richer-editor",
    "description": "A collection of extensions and tools to enhance the Filament Rich Editor field.",
    "keywords": [
        "awcodes",
        "laravel",
        "filament",
        "filamentphp",
        "richer-editor"
    ],
    "homepage": "https://github.com/awcodes/richer-editor",
    "support": {
        "issues": "https://github.com/awcodes/richer-editor/issues",
        "source": "https://github.com/awcodes/richer-editor"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Adam Weston",
            "email": "awcodes1@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-dom": "*",
        "filament/forms": "^5.0",
        "league/html-to-markdown": "*",
        "phiki/phiki": "^2.0",
        "spatie/laravel-package-tools": "^1.15.0"
    },
    "require-dev": {
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^8.0",
        "orchestra/testbench": "^9.0|^10.0",
        "pestphp/pest": "^4.3",
        "pestphp/pest-plugin-laravel": "^4.0",
        "pestphp/pest-plugin-livewire": "^4.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "rector/rector": "^2.0",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "Awcodes\\RicherEditor\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Awcodes\\RicherEditor\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "phpstan analyse",
        "lint": "pint",
        "refactor": "rector",
        "test:lint": "pint --test",
        "test:refactor": "rector --dry-run",
        "test:unit": "pest",
        "test": [
            "@test:refactor",
            "@test:lint",
            "@test:unit"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Awcodes\\RicherEditor\\RicherEditorServiceProvider"
            ],
            "aliases": {
                "RicherEditor": "Awcodes\\RicherEditor\\Facades\\RicherEditor"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
